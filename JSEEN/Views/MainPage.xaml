<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="JSEEN.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:JSEEN"
    xmlns:localViews="using:JSEEN.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:JSEEN.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:MainPageVM}"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource SystemControlAcrylicWindowBrush}">

        <Grid
            x:Name="AppTitleBar"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignTopWithPanel="True">
            <!--  Width of the padding columns is set in LayoutMetricsChanged handler.  -->
            <!--
                Using padding columns instead of Margin ensures that the background
                paints the area under the caption control buttons (for transparent buttons).
            -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="111" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Column="1"
                Width="20"
                Height="20"
                Margin="10,0"
                HorizontalAlignment="Left"
                Source="/Assets/StoreLogo.png" />

            <!--  APP TITLE  -->
            <TextBlock
                Grid.Column="1"
                Margin="44,0,10,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Jseen" />

            <!--  CURSOR  -->
            <TextBlock
                Grid.Column="2"
                Margin="5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="11"
                FontStyle="Italic"
                Foreground="{ThemeResource SystemAccentColor}"
                Text="Path:" />
            <StackPanel
                Grid.Column="3"
                VerticalAlignment="Stretch"
                Background="{ThemeResource SystemControlAcrylicElementBrush}">
                <TextBlock
                    x:Name="jPath"
                    Margin="5,6"
                    FontStyle="Italic"
                    Foreground="{ThemeResource SystemAccentColorLight1}"
                    Text="{Binding JPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <!--  EXTRAS  -->
            <Grid Grid.Column="4" Padding="0,0,100,0" />
        </Grid>

        <RelativePanel
            x:Name="buttons"
            Width="200"
            Background="{ThemeResource AppBarBackgroundThemeBrush}"
            RelativePanel.Below="AppTitleBar">
            <Button
                x:Name="openButton"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding ChooseFolder}"
                RelativePanel.RightOf="saveButton"
                ToolTipService.ToolTip="Open folder...">
                <Button.Content>
                    <FontIcon Glyph="&#xED43;" />
                </Button.Content>
            </Button>
            <Button
                x:Name="saveButton"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding SaveFile}"
                RelativePanel.AlignLeftWithPanel="True"
                ToolTipService.ToolTip="Save">
                <Button.Content>
                    <SymbolIcon Symbol="Save" />
                </Button.Content>
            </Button>
            <!--<Button
                x:Name="addButton"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NewFile}"
                RelativePanel.AlignLeftWithPanel="True"
                ToolTipService.ToolTip="New file...">
                <Button.Content>
                    <SymbolIcon Symbol="Add" />
                </Button.Content>
            </Button>-->
        </RelativePanel>

        <TextBlock
            x:Name="headerLabel"
            Margin="10,10,0,0"
            FontSize="10"
            FontStyle="Italic"
            RelativePanel.Below="buttons"
            Text="Worspace:" />
        <TextBlock
            x:Name="treeviewHeader"
            Margin="10,0,0,10"
            FontStyle="Italic"
            Foreground="{ThemeResource SystemAccentColorLight1}"
            RelativePanel.Below="headerLabel"
            Text="{Binding Workspace.DisplayName}" />

        <ProgressRing
            Width="50"
            Height="50"
            Margin="0,50"
            Background="{ThemeResource SystemControlAcrylicWindowBrush}"
            IsActive="{Binding ProgressBarVisibility}"
            RelativePanel.AlignHorizontalCenterWith="treeView"
            RelativePanel.AlignTopWith="treeviewHeader"
            RelativePanel.Below="treeviewHeader" />

        <TreeView
            x:Name="treeView"
            Width="225"
            Margin="-25,0,0,0"
            CanReorderItems="False"
            ItemsSource="{Binding WorkspaceTree}"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignLeftWithPanel="False"
            RelativePanel.Below="treeviewHeader"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Enabled"
            ScrollViewer.IsHorizontalRailEnabled="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollMode="Enabled"
            SelectionMode="Single">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem Background="Transparent" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon
                                Width="20"
                                Margin="0,0,10,0"
                                Symbol="{Binding Glyph}" />
                            <TextBlock
                                FontFamily="Malgun"
                                FontSize="10"
                                FontWeight="SemiBold"
                                Text="{Binding Name}" />
                        </StackPanel>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
            <i:Interaction.Behaviors>
                <i:EventTriggerBehavior EventName="ItemInvoked">
                    <i:InvokeCommandAction Command="{Binding TreeItemSelected}" />
                </i:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </TreeView>

        <ScrollViewer
            x:Name="mainContainer"
            Background="{ThemeResource AppBarBackgroundThemeBrush}"
            HorizontalScrollBarVisibility="Auto"
            HorizontalScrollMode="Enabled"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.Below="AppTitleBar"
            RelativePanel.RightOf="treeView"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <UserControl x:Name="displayPane" Content="{Binding PanelsView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        </ScrollViewer>

    </RelativePanel>

</Page>
